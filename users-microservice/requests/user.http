### Register Admin First Time
POST http://localhost:8001/api/auth/register
{
    "Name": "Admin User",
    "Email": "admin@example.com",
    "Password": "Admin@123",
    "ConfirmPassword": "Admin@123",
    "Role": "Admin"
}


curl -X POST http://localhost:8001/api/auth/register/admin \
  -H "Content-Type: application/json" \
  -d '{
    "Email": "admin@example.com",
    "Password": "Admin123!",
    "ConfirmPassword": "Admin123!",
    "FullName": "Admin User",
    "UserName": "adminuser",
    "School": "Admin School",
    "PhoneNumber": "+1234567890"
    }'

### Register Student
curl -X POST http://localhost:8001/api/auth/register/student \
  -H "Content-Type: application/json" \
  -H "Authorization: Bearer <token_jwt_aqui>" \
  -d '{
    "Email": "student@example.com",
    "Password": "Student123!",
    "ConfirmPassword": "Student123!",
    "FullName": "Student User",
    "UserName": "studentuser",
    "School": "Student School",
    "CUI": "1234567890",
    "Courses": [
        {
        "Name": "Course 1",
        "Semester": "Spring 2024",
        "Credits": 3
        },
        {
        "Name": "Course 2",
        "Semester": "Fall 2024",
        "Credits": 4
        }
    ]
    }'


